<div id="new-post">
    <h1>Add New Post</h1>
    <form action="/posts/new" method="POST" enctype="multipart/form-data">
        <input type="text" name="picName" id="picName" placeholder="Name of the picture" required />
        <textarea name="content" id="content" placeholder="Your content" required ></textarea>
        <input type="file" name="picture" id="picture" required />
        <input type="submit" value="Create post">
    </form>
</div>